{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2021",
    "lib": [
      "es2021", "DOM"
    ],
    "module": "ES2020",
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitOverride": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "exclude": [
    "src/**/*.test.ts",
    "dist/**/*"
  ]
}